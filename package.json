{
  "name": "pedal-peak-redesign",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "validate": "node scripts/validate-build.js",
    "build": "npm run validate && next build",
    "start": "next start",
    "lint": "next lint -c config/eslint.config.mjs",
    "preview": "next build && next start",
    "lint:fix": "next lint -c config/eslint.config.mjs --fix",
    "format:check": "prettier --config config/prettier.config.js --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format:write": "prettier --config config/prettier.config.js --write \"**/*.{ts,tsx,mdx}\" --cache",
    "typecheck": "tsc --noEmit",
    "test": "jest -c config/jest.config.js",
    "test:watch": "jest -c config/jest.config.js --watchAll",
    "e2e": "playwright test -c config/playwright.config.ts",
    "e2e:ui": "playwright test -c config/playwright.config.ts --ui",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js,ts,tsx}": [
      "eslint -c config/eslint.config.mjs --cache --fix",
      "prettier --config config/prettier.config.js --write"
    ]
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.9.1",
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@stripe/stripe-js": "^7.3.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/leaflet": "^1.9.20",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.515.0",
    "next": "15.3.3",
    "next-auth": "^5.0.0-beta.28",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-leaflet": "^5.0.0",
    "stripe": "^18.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "lint-staged": "^16.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "ts-jest": "^29.4.0",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5",
    "typescript-eslint": "^8.34.0"
  }
}
